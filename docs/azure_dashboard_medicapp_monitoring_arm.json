{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dashboardName": {
      "type": "string",
      "defaultValue": "medicapp-monitoring-dashboard"
    },
    "location": {
      "type": "string",
      "defaultValue": "westeurope"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Portal/dashboards",
      "apiVersion": "2022-12-01-preview",
      "name": "[parameters('dashboardName')]",
      "location": "[parameters('location')]",
      "properties": {
        "lenses": {
          "0": {
            "order": 0,
            "parts": {
              "0": {
                "position": {
                  "x": 0,
                  "y": 0,
                  "colSpan": 12,
                  "rowSpan": 3
                },
                "metadata": {
                  "type": "Extension/HubsExtension/PartType/MarkdownPart",
                  "inputs": [],
                  "settings": {
                    "content": {
                      "settings": {
                        "content": "# MedicApp Monitoring\n\nDashboard de supervision M3/M4"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "metadata": {
          "model": {
            "timeRange": {
              "value": {
                "relative": {
                  "duration": 24,
                  "timeUnit": 1
                }
              }
            },
            "filterLocale": {
              "value": "fr-fr"
            }
          }
        }
      }
    }
  ]
}

